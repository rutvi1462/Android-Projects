<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333C6C"
    tools:context=".GenerateTextPDF">

    <Button
        android:id="@+id/generate_pdf"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/generate_pdf"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/show_image"
        android:layout_width="420dp"
        android:layout_height="300dp"
        android:layout_below="@id/generate_pdf"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#ECE4E4"
        android:minHeight="48dp"
        android:text=""
        android:textColor="#090909"
        android:textIsSelectable="true"
        android:textSize="16sp"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>